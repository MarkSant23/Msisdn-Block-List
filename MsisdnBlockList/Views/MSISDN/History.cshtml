@model IEnumerable<MsisdnBlockList.Models.Log>
@{
    ViewData["Title"] = "History";
}
    
<div style="float:left;">
    <a asp-controller="Msisdn" asp-action="Search" onclick="history.go(-1); return false;" role="button" class="btn btn-primary">Nazad</a>
</div>
<div style="float:left; position:relative; left:75px;"><h3>Povijest broja mobilnog telefona @ViewBag.MSISDN</h3></div>    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.user_id)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.created)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.user.user_name
                    </td>
                    
                    <td>
                        @if (item.status != 0)
                        {
                            <span class="badge badge-primary">Blokiran</span>
                        }
                        else
                        {
                            <span class="badge badge-success">Odblokiran</span>
                        }
                    </td>
                    <td>
                        @item.created.ToString("dd.MM.yyyy HH:mm")
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

