@model MsisdnBlockList.Models.MSISDN
@{
    ViewData["Title"] = "Create";
}

<h2>Unesi novi broj mobilnog telefona</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="msisdn" class="control-label"></label>
                <input asp-for="msisdn" class="form-control" />
                <span asp-validation-for="msisdn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kreiraj" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Msisdn" asp-action="Index" onclick="history.go(-1); return false;" role="button" class="btn btn-primary">Vrati na listu</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
