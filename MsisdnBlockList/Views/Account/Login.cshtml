@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />


@if (!string.IsNullOrEmpty(error))
{
    <div id="sysinfo" class="alert alert-danger">@error</div>
}

<section class="vw-80">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center">
        
        <div class="card-body">
            <img style="position:relative; width:300px; float:left;" src="~/homepage.jpg"/>
            <h2>Dobrodošli u Msisdn aplikaciju</h2>
            <p class="lead" style="display: block; margin-left: 15px;">Aplikacija za praćenje i blokiranje/odblokiranje brojeva telefona.</p>
            <p><a href="https://docs.microsoft.com/aspnet/core" class="btn btn-alert-primary btn-lg">Za naučiti više &raquo;</a></p>
        </div>
        

      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <h4>Prijava</h4>
        <form asp-controller="Account" asp-action="Validate" method="post">

          <!-- Username input -->
          <div class="form-outline mb-4">
            <input type="text" id="form3Example3" class="form-control form-control-lg" name="username"
              placeholder="Unesite korisničko ime" required/>
            <label class="form-label" for="form3Example3">Korisničko ime</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input type="password" id="pwd" class="form-control form-control-lg" name="password"
              placeholder="Unesite lozinku" required/>
              <span class="eye">
                  <i class="fa fa-eye" id="togglePassword" onclick="toggleEye()"></i>
              </span>
            <label class="form-label" for="pwd">Lozinka</label>
          </div>

          <!-- Checkbox -->
          <div class="d-flex justify-content-between align-items-center">
            <div class="form-check mb-0">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
              <label class="form-check-label" for="form2Example3">
                Zapamti me
              </label>
            </div>
            <a href="#!" class="text-body">Zaboravili ste lozinku?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" id="submit" class="btn btn-primary btn-md" style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
            
            <p class="small fw-bold mt-2 pt-1 mb-0">Nemate korisnički račun? 
                <a href="#!" class="link-danger">Registracija</a>
            </p>
          
          </div>

        </form>
        <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Ili</p>
        </div>
        <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Prijava putem</p>

            <a role="button" class="btn btn-success btn-floating mx-1" href="/login/google?returnUrl=@returnUrl">
                <i class="fab fa-google fa-lg"></i> - Google računa
            </a>
        </div>

      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
    $(document).ready(function(){
        
        setTimeout(function(){
            $("#sysinfo").remove();
        },3000);
    });
</script>